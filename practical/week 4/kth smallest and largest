#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n,k;
    cout<< "Enter the number of elements you want in the array\n";
    cin>>n;
    cout<< "Enter the elements into the array\n";
    int a[n];
    for(int i=0;i<n;i++)
        cin>>a[i];
    cout<< "Enter the value of k\n";
    cin>>k;
    sort(a,a+n);
    cout<< "The kth smallest value is: "<<a[k-1]<<endl;
    cout<< "The kth largest value is: "<<a[n-k]<<endl;
    return 0;
}
